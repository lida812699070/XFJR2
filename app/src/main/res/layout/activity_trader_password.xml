<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/id_authentication_d"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp5"
        android:text="请输入交易密码"
        android:textSize="18sp" />

    <tomcat360.com.hyxfjr.view.PasswordInputView
        android:id="@+id/et_input_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp25"
        android:layout_margin="@dimen/dp10"
        android:background="@color/transparent"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        app:pivBorderColor="@color/et_hint_color"
        app:pivBorderRadius="1dp"
        app:pivBorderWidth="1px"
        app:pivPasswordColor="@color/et_text_color"
        app:pivPasswordLength="6"
        app:pivPasswordWidth="@dimen/dp3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp5"
        android:text="请确认交易密码"
        android:textSize="18sp" />

    <tomcat360.com.hyxfjr.view.PasswordInputView
        android:id="@+id/et_input_password_again"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp25"
        android:layout_margin="@dimen/dp10"
        android:background="@color/transparent"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        app:pivBorderColor="@color/et_hint_color"
        app:pivBorderRadius="1dp"
        app:pivBorderWidth="1px"
        app:pivPasswordColor="@color/et_text_color"
        app:pivPasswordLength="6"
        app:pivPasswordWidth="@dimen/dp3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_promotion_quota"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:layout_weight="1"
                android:background="@drawable/shape_white_btn"
                android:text="提额神器"
                android:textColor="@color/guestPaint_color_wrong" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:layout_weight="1"
                android:background="@drawable/shape_orang_btn"
                android:text="提交信息"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            style="@style/Line"
            android:layout_above="@id/ll_bottom" />
    </RelativeLayout>
</LinearLayout>
