<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp5"
    android:layout_marginRight="@dimen/dp5"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:padding="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginTop="@dimen/dp3"
            android:text="这是一个项目名"
            android:textColor="@color/text_blank"
            android:textSize="18sp" />

        <View
            style="@style/Line"
            android:layout_marginTop="@dimen/dp5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/payment_history_item_periods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/periods_times" />

                <TextView
                    android:id="@+id/payment_history_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_history_item_periods"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="04/12" />

                <TextView
                    android:id="@+id/payment_history_item_bqhq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_history_item_date"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp5"
                    android:text="本期还款日" />

                <TextView
                    android:id="@+id/payment_history_item_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_history_item_bqhq"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="2016-09-20" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/payment_history_item_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="借款金额" />

                <TextView
                    android:id="@+id/payment_history_item_balance_mooney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_history_item_balance"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="5,000.00" />

                <TextView
                    android:id="@+id/payment_history_item_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_history_item_balance_mooney"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp5"
                    android:text="还款状态" />

                <TextView
                    android:id="@+id/payment_history_item_balance_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_history_item_state"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="逾期" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>