<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp30"
    android:paddingRight="@dimen/dp2"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_load_dialog_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:padding="@dimen/dp5"
        android:text="2017年1月20日"
        android:textColor="@color/text_blank"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <TextView
            android:id="@+id/item_load_dialog_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp3"
            android:layout_marginTop="@dimen/dp3"
            android:text="491.95元"
            android:textColor="@color/red_text" />

        <TextView
            android:maxLines="1"
            android:id="@+id/item_load_dialog_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_load_dialog_sum"
            android:layout_marginBottom="@dimen/dp3"
            android:layout_marginRight="@dimen/dp3"
            android:text="含本金416.67元/利息75.28元"
            android:textColor="@color/et_hint_color"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>