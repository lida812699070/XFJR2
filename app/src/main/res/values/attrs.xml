<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MineItemView">
        <attr name="textRight" format="string" />
        <attr name="title" format="string" />
        <attr name="image" format="reference" />
    </declare-styleable>
    <declare-styleable name="ClipImageLayout">
        <attr name="imagePath" format="string" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />

    </declare-styleable>
    <declare-styleable name="SettingItemView">
        <attr name="titleSettingItem" format="string" />
    </declare-styleable>
    <declare-styleable name="PasswordInputView">
        <attr name="pivBorderColor" format="color"/>
        <attr name="pivBorderWidth" format="dimension"/>
        <attr name="pivBorderRadius" format="dimension"/>
        <attr name="pivPasswordColor" format="color"/>
        <attr name="pivPasswordWidth" format="dimension"/>
        <attr name="pivPasswordRadius" format="dimension"/>
        <attr name="pivPasswordLength" format="integer"/>
    </declare-styleable>

    <declare-styleable name="LockPatternView">

        <attr name="aspect">
            <enum name="square" value="0" />
            <enum name="lockWidth" value="1" />
            <enum name="lockHeight" value="2" />
        </attr>
        <attr name="line" format="color" />
        <attr name="btnNormal" format="reference" />
        <attr name="btnTouched" format="reference" />
        <attr name="circleNormal" format="reference" />
        <attr name="circleGreen" format="reference" />
        <attr name="circleRed" format="reference" />
        <attr name="arrowGreenUp" format="reference" />
        <attr name="arrowRedUp" format="reference" />
    </declare-styleable>
</resources>