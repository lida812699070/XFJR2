<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--通用的条状-->
    <style name="commonItem" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp24</item>
        <item name="android:background">@drawable/common_layout_clickable_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/dp10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="Block">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="right_go_btn" parent="@style/Block">
        <item name="android:layout_width">@dimen/dp10</item>
        <item name="android:layout_marginRight">@dimen/dp10</item>
        <item name="android:src">@drawable/right</item>
    </style>
    <style name="SettingItemText">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/tcolor_b1</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:layout_marginLeft">@dimen/dp5</item>
    </style>
    <style name="WhiteToolbarText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">#ffffff</item>
    </style>

    <style name="text_setting_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">@dimen/dp5</item>
        <item name="android:textColor">@color/text_blank</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_editStyle">
        <item name="android:layout_height">47dp</item>
        <item name="android:layout_width">47dp</item>
        <item name="android:background">@drawable/bg_verify</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/no_color</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="Text_home_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp5</item>
        <item name="android:textColor">@color/blank</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text_home_item_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp3</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CardView_home_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp38</item>
        <item name="android:layout_margin">@dimen/dp3</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/dp5</item>
    </style>

    <style name="Text.Title_Button" parent="@style/Text">
        <item name="android:textColor">@color/global_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.Title" parent="@style/Text">
        <item name="android:textColor">@color/tcolor_b1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">

        <!--设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--设置无标题-->
        <item name="windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">#fff</item>
    </style>

    <style name="Edittext_reg">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dp2</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/dp5</item>
    </style>

    <style name="Welcome" parent="AppTheme">
        <item name="android:windowBackground">@drawable/welcome</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="Line_s">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="Buttom_with">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_button_with_bg</item>
        <item name="android:layout_margin">@dimen/dp10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_16sp">
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/dp5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="et_16sp">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/dp3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Buttom_red">
        <item name="android:layout_margin">@dimen/dp5</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/red_btn_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp3</item>
        <item name="android:textColor">@color/selector_rb_text</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

    <style name="Text_22sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp5</item>
        <item name="android:textColor">#a555</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text_20sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp5</item>
        <item name="android:textColor">#a555</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- 弹出、收起动画集 -->
    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>
</resources>
